<?xml version="1.0"?>
<metainfo>
  <schemaVersion>2.0</schemaVersion>
  <services>
    <service> 
      <name>MongoDB</name>
      <displayName>MongoDB</displayName>
      <comment>The intermediate database in your lambda stack</comment>
      <version>3.2</version>
      <components>
        <component>
          <name>MONGODB</name>
          <displayName>Mongo DB Server</displayName>
          <category>SLAVE</category>
		  <cardinality>1+</cardinality>
          <commandScript>
            <script>scripts/mongo_db.py</script>
            <scriptType>PYTHON</scriptType>
            <timeout>600</timeout>
          </commandScript>
          <configFiles>
            <configFile>
              <type>xml</type>
              <fileName>mongod.xml</fileName>
              <dictionaryName>mongod</dictionaryName>
            </configFile>
          </configFiles>
        </component>
        <component>
          <name>MONGODC</name>
          <displayName>Mongo Config Server</displayName>
          <category>SLAVE</category>
		  <cardinality>0-3</cardinality>
          <commandScript>
            <script>scripts/mongo_config.py</script>
            <scriptType>PYTHON</scriptType>
            <timeout>600</timeout>
          </commandScript>
          <configFiles>
            <configFile>
              <type>xml</type>
              <fileName>mongo-conf.xml</fileName>
              <dictionaryName>mongo-config</dictionaryName>
            </configFile>
          </configFiles>
        </component>
		<component>
          <name>MONGOS</name>
          <displayName>Mongo Query Router</displayName>
          <category>SLAVE</category>
		  <cardinality>0+</cardinality>
          <commandScript>
            <script>scripts/mongos.py</script>
            <scriptType>PYTHON</scriptType>
            <timeout>600</timeout>
          </commandScript>
          <configFiles>
            <configFile>
              <type>xml</type>
              <fileName>mongos.xml</fileName>
              <dictionaryName>mongos</dictionaryName>
            </configFile>
          </configFiles>
        </component>
        <component>
          <name>MONGODB_CLIENT</name>
          <displayName>MongoDB Client</displayName>
          <category>CLIENT</category>
          <commandScript>
            <script>scripts/mongo_client.py</script>
            <scriptType>PYTHON</scriptType>
            <timeout>600</timeout>
          </commandScript>
        </component>
      </components>

      <osSpecifics>
        <osSpecific>
          <osFamily>redhat5,redhat6,redhat7</osFamily>
          <packages>
            <package>
              <name>glibc</name>
            </package>
          </packages>
        </osSpecific>
      </osSpecifics>

      <configuration-dependencies>
        <config-type>mongodb</config-type>
      </configuration-dependencies>
    </service>
  </services>
</metainfo>
